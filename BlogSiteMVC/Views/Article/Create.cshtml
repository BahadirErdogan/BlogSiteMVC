@{
    ViewData["Title"] = "Create Article";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow bg-secondary mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Index">
                <img src="~/img/logo-drop.png" width="160" height="90" alt="Web Sitesi Logosu" />
            </a>
            <button class="navbar-toggler navbar-dark border-white" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Article" asp-action="Create">Write</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Article" asp-action="List">My Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Settings">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="SignOut">Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div asp-validation-summary="All" class="text-danger"></div>

<h2>Tell Us Your Story</h2>
<hr />


<div class="container">

    <div class="row">
        <div class="col-8">
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Title">
            </div>
            <div class="mb-3">
                <textarea class="form-control" rows="15" placeholder="Start wring..."></textarea>
            </div>

            <button type="submit" class="btn btn-outline-dark" asp-route-id="#"> Save as a draft </button>
            <button type="submit" class="btn btn-dark" asp-route-id="#"> Publish </button>
        </div>

        <div class="col-4">

            <h4>Select an image</h4>

            <div class="mb-3">
                <input class="form-control" type="file" id="formFile">
            </div>

            <hr />
            <h4>Select an image</h4>

            @*Alt tarafta foreach ile kullanıcının takip ettiği topicler seçebilmesi için sıralanacak*@

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" aria-label="Checkbox for following text input">
                    </div>
                </div>
                <input type="text" class="form-control" aria-label="Text input with checkbox" value="Topic-1">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" aria-label="Checkbox for following text input">
                    </div>
                </div>
                <input type="text" class="form-control" aria-label="Text input with checkbox" value="Topic-2">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" aria-label="Checkbox for following text input">
                    </div>
                </div>
                <input type="text" class="form-control" aria-label="Text input with checkbox" value="Topic-3">
            </div>

        </div>

    </div>



    
</div>
<h3>Settings</h3>
<hr />

<div class="container">
    <div class="row">

        <div class="col">
            <h5>About You</h5>
            <form asp-action="#" method="post">
         
                <div class="form-group">
                    <input @*asp-for="..."*@ type="text" class="form-control" placeholder="Name" />
                </div>
                <div class="form-group">
                    <label>Birthday :</label>
                    <input @*asp-for="..."*@ type="date" class="form-control" placeholder="Birthday" />
                </div>
                <div class="form-check">
                    <input @*asp-for="..."*@ class="form-check-input" type="radio" name="gender" id="flexRadioMale">
                    <label class="form-check-label" for="flexRadioMale">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input @*asp-for="..."*@ class="form-check-input" type="radio" name="gender" id="flexRadioFemale">
                    <label class="form-check-label" for="flexRadioFemale">
                        Female
                    </label>
                </div>
                <div class="form-check">
                    <input @*asp-for="..."*@ class="form-check-input" type="radio" name="gender" id="flexRadioOther">
                    <label class="form-check-label" for="flexRadioOther">
                        Other
                    </label>
                </div>
                <div class="form-check">
                    <input @*asp-for="..."*@ class="form-check-input" type="radio" name="gender" id="flexRadioNotRespond">
                    <label class="form-check-label" for="flexRadioNotRespond">
                        Prefer not to respond
                    </label>
                </div>
                <div>
                    <select @*asp-for="..."*@ class="form-select" style="margin-top:16px;margin-bottom:16px;">
                        <option selected>Profession</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
                <div class="form-group">
                    <input @*asp-for="..."*@ type="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input @*asp-for="..."*@ type="text" class="form-control" placeholder="UserName" />
                </div>
                <div class="form-group">
                    <label>Public URL :</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon">https://drop.com/user/</span>
                        </div>
                        <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon" placeholder="Url" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label>Profile Picture File type: (JPG, PNG or GIF.): </label>
                    <input type="file" name="photo" id="photo" accept=".jpg,.png,.gif,.JPEG,.jpeg" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tell us more about you!</label>
                   <textarea class="form-control" placeholder="Short Bio."></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Save Changes</button>
                    <button type="submit" class="btn btn-outline-dark">Cancel</button>
                </div>

           

            </form>


        </div>


    </div>

    <div class="row">
        <div class="col">
            <h5>Pasword</h5>
            <div asp-action="#" method="post"></div>

            <div class="form-group">
                <input @*asp-for="..."*@ type="password" class="form-control" placeholder="Current Password" />
            </div>
            <div class="form-group">
                <input @*asp-for="..."*@ type="password" class="form-control" placeholder="New Password" />
            </div>
            <div class="form-group">
                <input @*asp-for="..."*@ type="password" class="form-control" placeholder="New Password" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-dark">Change Password</button>
                <button type="submit" class="btn btn-outline-dark">Cancel</button>
            </div>


        </div>

    </div>
    <hr />

    <div class="row">
        <div class="col">
            <h5>Delete My Account</h5>
            <p>If you delete your account you will lose membership advantages.</p>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>




</div>


